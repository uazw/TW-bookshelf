extend ./layout.jade

block content
    h2 create a book
    form(class='form-horizontal', action='/book', method='post')
        div.form-group
            label(class='col-sm-2 control-label') Book ISBN:
            div.col-sm-10
                input(type='text', class='form-control', name='isbn')
        div.form-group
            label(class='col-sm-2 control-label') Name:
            div.col-sm-10
                input(type='text', class='form-control', name='name')
        div.form-group
            label(class='col-sm-2 control-label') author:
            div.col-sm-10
                input(type='text', class='form-control', name='author')
        div.form-group
            label(class='col-sm-2 control-label') price:
            div.col-sm-10
                input(type='text', class='form-control', name='price')
        div.row
            button(type='submit', class='btn btn-default') Submit